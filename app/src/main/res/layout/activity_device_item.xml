<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabodhaharankahadeniya.smartremote.DeviceItemActivity">

    <ImageView
        android:id="@+id/ivDevice"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@android:drawable/btn_default_small" />

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="30dp"
        android:layout_weight="0.08"
        android:layout_toEndOf="@+id/ivDevice"
        android:text="" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivDevice"
        android:layout_toEndOf="@+id/tvDeviceName"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_alignBottom="@+id/ivDevice" />

</RelativeLayout>
