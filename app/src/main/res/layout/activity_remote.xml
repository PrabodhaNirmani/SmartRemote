<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabodhaharankahadeniya.smartremote.RemoteActivity">

    <ImageButton
        android:id="@+id/btn_on_off"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="saveOnOff"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/btn_forward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_increase"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/btn_increase"
        android:background="@android:color/background_dark"
        android:onClick="saveForward"
        app:srcCompat="@android:drawable/ic_media_next" />

    <ImageButton
        android:id="@+id/btn_backward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/btn_increase"
        android:background="@android:color/background_dark"
        android:onClick="saveBackward"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/btn_increase"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btn_backward"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@android:color/background_dark"
        android:onClick="saveIncrease"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/btn_decrease"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn_increase"
        android:layout_below="@+id/btn_backward"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_dark"
        android:onClick="saveDecrease"
        app:srcCompat="@android:drawable/arrow_down_float" />

</RelativeLayout>
